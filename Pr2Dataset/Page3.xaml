<Page x:Class="Pr2Dataset.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr2Dataset"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="OrdersDataGrid" Grid.ColumnSpan="2" IsReadOnly="True" SelectionChanged="OrdersDataGrid_SelectionChanged" />
        <TextBox x:Name="NameTb" Grid.Row="1" />
        <TextBox x:Name="NameTb1" Grid.Row="2" />
        <Button Grid.Row="3" Content="Добавить" Click="Button_Click"/>
        <Button Grid.Row="4" Content="изменить" Click="Button_Click_1"/>
        <Button Grid.Row="5" Content="Удалить" Click="Button_Click_2" />
    </Grid>
</Page>
